<Controls:MetroWindow x:Class="CheckOut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:CheckOut"
        mc:Ignorable="d"
        Title="CheckOut" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ShowMaxRestoreButton="False">
    <Controls:MetroWindow.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/BG.jpg"/>
    </Controls:MetroWindow.Background>
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="Settings" />
            <Button>
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconModern Width="24" Height="24" Kind="Shopping" />
                    <TextBlock Margin="4 0 0 0" VerticalAlignment="Center" Text="Pick-a-Pair" />
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid>
        
    </Grid>
</Controls:MetroWindow>
